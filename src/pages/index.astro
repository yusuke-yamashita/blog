---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";
import IconRss from "@/assets/icons/IconRss.svg";
import { Image } from "astro:assets";
import gomaImg from "@/assets/goma.png";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      
      {/* メインのコンテナ */}
      <div class="flex flex-col-reverse sm:flex-row sm:items-center justify-between gap-6 sm:gap-12">
        
        {/* ▼ 左側のテキストエリア：要素を上から順に配置 */}
        <div class="flex-1 flex flex-col items-start gap-4">
          
          {/* 1. タイトル & 肩書き */}
          <div>
            <h1 class="text-3xl font-bold sm:text-5xl tracking-tight text-skin-accent mb-2 whitespace-nowrap">
              I am Yamazun.
            </h1>
            <p class="text-lg font-medium text-skin-base">
              <strong>System Fixer</strong> / バキバキQA / Dirty Tester / Philosopher
            </p>
          </div>

          {/* 2. 自己紹介文 */}
          <p class="text-skin-base opacity-90 leading-relaxed max-w-lg">
            ソフトウェアテストをルーツに持ちつつ、System Fixerを目指しています。<br>
            ソフトウェアだけでなく、組織構造や人間関係の不具合もFixします。<br>
            私については Profile と Me にまとめています。
          </p>

          {/* 3. ボタンエリア（ここに移動しました） */}
          <div class="py-2">
            <LinkButton href="/me">
              Read "Me"
            </LinkButton>
          </div>

          {/* 4. ソーシャルリンク（一番下に配置） */}
          {
            SOCIALS.length > 0 && (
              <div class="flex flex-wrap items-center gap-2">
                <span class="whitespace-nowrap me-2">Social Links:</span>
                <Socials />
              </div>
            )
          }

        </div>

        {/* ▼ 画像エリア */}
        <div class="flex flex-col items-center mb-4 sm:mb-0 flex-shrink-0">
          <Image 
            src={gomaImg} 
            class="rounded-full w-32 h-32 sm:w-48 sm:h-48 object-cover shadow-xl border-4 border-skin-card" 
            alt="守り神のごま" 
          />
          <span class="mt-3 text-sm font-bold text-skin-base opacity-70 tracking-wider">
            守り神のごま
          </span>
        </div>

      </div>
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
            <ul>
              {featuredPosts.map(data => (
                <Card variant="h3" {...data} />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          
          <div class="flex items-center gap-2 mb-2">
            <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
            <a
              href="/rss.xml"
              target="_blank"
              aria-label="rss feed"
              title="RSS Feed"
              class="group inline-block"
            >
              <IconRss class="h-6 w-6 scale-90 opacity-50 transition-all duration-300 group-hover:scale-110 group-hover:fill-skin-accent group-hover:opacity-100" />
            </a>
          </div>

          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>